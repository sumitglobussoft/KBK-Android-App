<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_with_art" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/kookbook_text_orrange"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/white_back_btn" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_btn"
            android:layout_marginLeft="10dp"
            android:text="Order Status"
            android:textColor="@color/White" />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/order_details_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:background="@drawable/textfield_search_right_default_holo_light">
        
        <RelativeLayout
        android:id="@+id/order_det_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >
        
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/date"
            android:textSize="15dp"
            android:text="Delhi Darbar Gastronomy"
            android:textColor="@color/kookbook_text_dark_gray"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:text="09 July 15"
            android:textColor="@color/kookbook_text_dark_gray"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/price"
            android:text="Kapurbawdir"
            android:textColor="@color/kookbook_text_dark_gray"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:textSize="13dp"
            android:text="Total: 250"
            android:textColor="@color/kookbook_text_orrange"/>
   </RelativeLayout>
   <RelativeLayout
        android:id="@+id/delivery_address_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_det_rel"
        android:padding="5dp" >
        
       <TextView
            android:id="@+id/delivery_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:text="Delivery at:"
            android:textColor="@color/kookbook_text_orrange"/>
       <TextView
            android:id="@+id/delivery_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/delivery_txt"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:text="Delivery fgfhgf vgdgdfhf gfhfbhgfhgf htghghg ghbnghg ghnghghg gdfgfdf gf dgfhghdh"
            android:textColor="@color/kookbook_text_dark_gray"/>
        
   </RelativeLayout>    
        
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/order_status_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_details_rel"
        android:background="@drawable/textfield_search_right_default_holo_light"
        android:padding="15dp">
   
        <ImageView 
            android:id="@+id/inProcess_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/process_inactive"/>
        <View 
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/preparing_img"
            android:layout_toRightOf="@+id/inProcess_img"
            android:background="@color/kookbook_bg_dark_grey"
            />
        <ImageView 
            android:id="@+id/preparing_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/preparing_active"/>
        <View 
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/dispatched_img"
            android:layout_toRightOf="@+id/preparing_img"
            android:background="@color/kookbook_bg_dark_grey"
            />
        <ImageView 
            android:id="@+id/dispatched_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/dispatched_inactive"/>
        
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/order_list_items"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_status_rel"
        android:padding="5dp">
   
        <TextView 
            android:id="@+id/hide_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide Items"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/kookbook_text_green"
            android:textSize="10dp"
            />
        
        <ImageView 
            android:id="@+id/hide_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hide_txt"
            android:background="@drawable/caret_up"
            android:layout_marginLeft="5dp" />
        
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/list_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/order_list_items">
        
        <ListView 
           android:id="@+id/show_items_list"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true" 
           android:padding="5dp">   
        </ListView>  
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/subtotal_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/list_rel">
        <TextView 
            android:id="@+id/subtotal_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="Subtotal: \u20B9"
            android:textColor="@color/kookbook_text_dark_gray"
            android:textSize="12dp"/>
    </RelativeLayout>
</RelativeLayout>
