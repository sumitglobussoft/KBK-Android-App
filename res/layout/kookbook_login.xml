<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_with_art">
    
    
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/top_transparentbg" >
        
        <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="LOGIN"
        android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/signup_close_btn" />
        
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/loginWithFb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginWithGplus"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_with_fb">
    </ImageView>
    
    <ImageView
        android:id="@+id/loginWithGplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_with_gplus">
    </ImageView>
    
    <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/or_login_using_mail" />
    
    <EditText
        android:id="@+id/email"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:paddingLeft="40dp"
        android:hint="Email"
        android:textColorHint="#FFFFFF"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:background="@drawable/email_bg"
        android:textSize="12sp" >
    </EditText>
    
 
    <EditText
        android:id="@+id/password"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email"
        android:layout_margin="2dp"
        android:paddingLeft="40dp"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:hint="Password"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/password_bg"
        android:textSize="12sp" >
    </EditText>
    
    <ImageView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_margin="7dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_btnbg">
    </ImageView>
    
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_gravity="center_horizontal"
        android:text="Forgot Password?"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#393939"
        android:textSize="13dp"/>
    
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_transparentbg" >
        
        <TextView
        android:id="@+id/bottomtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="8sp"
        android:text="By logging in you agree to Kookbooks's Terms of Service, Privacy Policy and Content Policies."
        android:textColor="#FFFFFF" />
        
    </RelativeLayout>

</RelativeLayout>
