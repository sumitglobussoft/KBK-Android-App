<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_with_art" >
    
    <RelativeLayout
        android:id="@+id/order_det_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >
        
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:text="Delhi Darbar Gastronomy"
            android:textColor="@color/kookbook_text_dark_gray"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:text="09 July 15"
            android:textColor="@color/kookbook_text_dark_gray"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Kapurbawdi"
            android:textColor="@color/kookbook_text_dark_gray"
            android:textSize="12dp" />
        
   </RelativeLayout>
   
    <RelativeLayout 
        android:id="@+id/show_items_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_det_rel">
        
        <TextView 
            android:id="@+id/show_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Items"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/kookbook_text_green"
            android:textSize="10dp"
            />
        
        <ImageView 
            android:id="@+id/show_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/show_txt"
            android:background="@drawable/caret_down"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/list_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_items_rel"
        android:visibility="gone"
        android:padding="10dp">
        
        <ListView 
           android:id="@+id/show_items_list"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true" 
           android:padding="5dp">   
        </ListView>  
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/hide_items_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_rel"
        android:visibility="invisible"
        android:padding="5dp">
        
        <TextView 
            android:id="@+id/hide_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide Items"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/kookbook_text_green"
            android:textSize="10dp"
            />
        
        <ImageView 
            android:id="@+id/hide_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hide_txt"
            android:background="@drawable/caret_up"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/total_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hide_items_rel">
        
        <TextView 
            android:id="@+id/total_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:  \u20B9"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/kookbook_text_dark_gray"
            android:textSize="12dp"/>
        <TextView 
            android:id="@+id/re_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     Reorder    "
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/rectangle_border_with_color"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/White"
            android:textSize="13dp"/>
        
    </RelativeLayout>
    
</RelativeLayout>
