<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_with_art" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/kookbook_text_orrange"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/white_back_btn" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_btn"
            android:paddingLeft="10dp"
            android:text="Checkout"
            android:textColor="@color/White" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:background="@color/kookbook_bg_green">
        
        <TextView
            android:id="@+id/home_delivery_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@+id/center_icon"
            android:text="Home Delivery"
            android:textColor="@color/White" />
        
        <ImageView
            android:id="@+id/center_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_action_next_item" />
        
        <TextView
            android:id="@+id/take_away_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/center_icon"
            android:text="Take Away"
            android:textColor="@color/White" />  
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:background="@color/kookbook_bg_dark_grey"
        android:padding="10dp">

        <TextView
            android:id="@+id/alert_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Sorry, this restaurant does not accepts delivery orders below 500.00. Your current subtotal is 115.00."
            android:textColor="@color/White"
            android:textSize="7dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel2"
        android:padding="10dp" >

        <TextView
            android:id="@+id/add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="+ ADD NEW ITEM"
            android:textColor="@color/kookbook_text_orrange"
            android:textSize="12dp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rel4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel3" >
        
        <ListView
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:divider="@color/White"
            android:dividerHeight="3dp"
            android:fadingEdgeLength="0dp" />
        
    </RelativeLayout>
    
    

</RelativeLayout>
