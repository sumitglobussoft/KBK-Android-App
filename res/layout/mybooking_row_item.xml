<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_with_art"
    android:padding="10dp" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:text="Delhi Darbar Gastronomy"
            android:textColor="@color/kookbook_text_dark_gray"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Add card on next step"
            android:textColor="@color/kookbook_text_dark_gray"
            android:textSize="12dp" />
        
        <RelativeLayout 
            android:id="@+id/date_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_margin="5dp">
            
            <ImageView 
                android:id="@+id/calender_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/calender"/>
            <TextView 
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/calender_img"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="08/09"
                android:textSize="10dp"
                android:textColor="@color/kookbook_text_orrange"/>
            <ImageView 
                android:id="@+id/time_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/date"
                android:layout_centerVertical="true"
                android:background="@drawable/time"/>
            <TextView 
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/time_img"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="10.30 PM"
                android:textSize="10dp"
                android:textColor="@color/kookbook_text_orrange"/>
            <ImageView 
                android:id="@+id/fork_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/time"
                android:layout_centerVertical="true"
                android:background="@drawable/fork"/>
            <TextView 
                android:id="@+id/fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fork_img"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="4"
                android:textSize="10dp"
                android:textColor="@color/kookbook_text_orrange"/>
            
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/status_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_rel">
            
            <TextView 
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/kookbook_text_dark_gray"
                android:textSize="12dp"
                android:text="Status:"
                />
            <TextView 
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/status_txt"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="BOOKED"
                android:textSize="12dp"
                android:textColor="@color/kookbook_text_orrange"/>
        </RelativeLayout>
        
</RelativeLayout>