<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_with_art" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/kookbook_text_orrange"
        android:padding="15dp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/white_back_btn" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_btn"
            android:paddingLeft="10dp"
            android:text="Verify Number"
            android:textColor="@color/White"/>

        
    </RelativeLayout>
    
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:layout_below="@+id/header"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:text="Please verify your phone number" />
    
    <EditText
        android:id="@+id/phone_edit"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:paddingLeft="100dp"
        android:textSize="12dp"
        android:inputType="number"
        android:maxLength="10"
        android:imeOptions="actionNext"
        android:layout_centerHorizontal="true"
        android:background="@drawable/phone_verification" />
    
    <ImageView
        android:id="@+id/verify_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_edit"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:src="@drawable/verify_btn" />

      <TextView
        android:id="@+id/verify_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/verify_img"
        android:textSize="8dp"
        android:textColor="@color/black"
        android:text="We will send you code via SMS to verify this number" />  

</RelativeLayout>