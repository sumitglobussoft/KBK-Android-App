<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_with_art" >
    
    <RelativeLayout
        android:id="@+id/spcl_instuctions_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/spcl_instructions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Special Instructions"
            android:textColor="@color/kookbook_text_orrange"
            android:textSize="12dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/spcl_instuctions_msg_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spcl_instuctions_rel"
        android:background="@color/kookbook_bg_lite_grey"
        android:padding="10dp" >

        <TextView
            android:id="@+id/spcl_instructions_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="Alergic to something? Want your less spicy? Mention it here....."
            android:textColor="@color/kookbook_text_lite_gray"
            android:textSize="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bill_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spcl_instuctions_msg_rel"
        android:padding="10dp" >

        <TextView
            android:id="@+id/billSummery_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Bill Summery"
            android:textColor="@color/kookbook_text_orrange"
            android:textSize="12dp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/bill_msg_rel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bill_rel"
        android:background="@color/kookbook_bg_lite_grey"
        >

        <TextView
            android:id="@+id/subtotal_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:text="Subtotal"
            android:textColor="@color/kookbook_text_dark_gray"
            android:textStyle="bold"
            android:textSize="11dp" />
        <TextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:text="@string/Rs"
            android:textColor="@color/kookbook_text_dark_gray"
            android:textStyle="bold"
            android:textSize="11dp" />
        <TextView
            android:id="@+id/service_charges_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtotal_txt"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:text="Service Charges"
            android:textColor="@color/kookbook_text_lite_gray"
            android:textSize="11dp" />
        <TextView
            android:id="@+id/service_charges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtotal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:text="@string/Rs"
            android:textColor="@color/kookbook_text_lite_gray"
            android:textSize="11dp" />
        <TextView
            android:id="@+id/service_tax_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_charges_txt"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:text="Service Tax"
            android:textColor="@color/kookbook_text_lite_gray"
            android:textSize="11dp" />
        <TextView
            android:id="@+id/service_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_charges"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:text="@string/Rs"
            android:textColor="@color/kookbook_text_lite_gray"
            android:textSize="11dp" />
        
       <View 
           android:id="@+id/border"
           android:layout_width="fill_parent"
           android:layout_height="0.5dp"
           android:layout_below="@+id/service_tax_txt"
           android:layout_centerHorizontal="true"
           android:paddingBottom="10dp"
           android:background="@color/kookbook_text_lite_gray"/>
       
       <TextView
            android:id="@+id/total_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Total"
            android:textColor="@color/kookbook_text_dark_gray"
            android:textStyle="bold"
            android:textSize="11dp" />
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/Rs"
            android:textColor="@color/kookbook_text_dark_gray"
            android:textStyle="bold"
            android:textSize="11dp" />
        
    </RelativeLayout>

</RelativeLayout>
